using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Viikko5harkat
    //teht채v채1
{
    class Rengas
    {
        string merkki;
        string tyyppi;
        double rengaskoko;

        public string Merkki
        {
            get
            {
                return merkki;
            }

            set
            {
                merkki = value;
            }
        }

        public string Tyyppi
        {
            get
            {
                return tyyppi;
            }

            set
            {
                tyyppi = value;
            }
        }

        public double Rengaskoko
        {
            get
            {
                return rengaskoko;
            }

            set
            {
                rengaskoko = value;
            }
        }
    }
}
